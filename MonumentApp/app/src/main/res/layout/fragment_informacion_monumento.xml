<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.monumento.monumentapp.InformacionMonumento"
    android:background="#FAFAFA">
    yout
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/im_info_imagen"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/josedecaldas"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fransico José de Caldas."
            android:id="@+id/tx_info_nombre"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Natural de Popayán, fue uno de los grandes sabios de su época, dirigiendo el Observatorio Astronómico y publicando en un periódico de corte científico. En la estatua –también en bronce- aparece en una pose reflexiva y acompañado de algunos de los instrumentos que utilizó en sus investigaciones. La obra es del escultor francés Raul Carlos Verlet."
            android:id="@+id/tx_info_descripcion"
            android:layout_margin="10dp"
            android:textAlignment="inherit"
            android:textSize="15dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
